@model IEnumerable<Bulky.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<div> 
       <a asp-action="Create" asp-controller="Category">Create New Category</a>   
</div>
<table>
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
          <tr>
              <td width="30%">@obj.Name</td>
              <td  width="50%">@obj.DisplayOrder</td>
              <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
              </td>
              
          </tr>  
        }
    </tbody>
</table>
